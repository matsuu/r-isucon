{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "inlineSourceMap": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "typeRoots" :[
      "node_modules/@types"
    ],
    "noEmitHelpers": true
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "debug": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
